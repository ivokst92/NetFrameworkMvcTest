@*@using Resources*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>!Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="asp-headerbar">
                <div class="asp-logo pull-left">
                    <a href="http://www.asp.government.bg/" target="_blank"> <img src="@Url.Content("~/Content/Images/logo.png")" /></a>
                </div>
                <div style="margin-left: 60px;">
                    <div class="asp-main-heading">
                        !ASP TITLE
                    </div>
                </div>
                <div style="position: absolute; top: 0px; right: 0px;">
                    <ul class="nav navbar-nav navbar-right mainLanguage">
                        <li>
                            <form method="post" action="@Url.Action("SetCulture")">
                                <input type="hidden" value="bg" name="culture" />
                                <button type="submit" class="btn btn-link">Български</button>
                            </form>
                        </li>
                        <li>
                            <form method="post" action="@Url.Action("SetCulture")">
                                <input type="hidden" value="en" name="culture" />
                                <button type="submit" class="btn btn-link">English</button>
                            </form>
                        </li>
                    </ul>
                </div>
                @*<div>@Html.Partial("_SignInPartial")</div>*@
            </div>

            @Html.Partial("_ContextualMenu")
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
